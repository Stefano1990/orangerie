<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  	<%= render 'layouts/stylesheets' %>
	<%= render 'layouts/javascripts' %>
  	<%= csrf_meta_tag %>

  	<%= yield :head %>
</head>
<body>
	<div class="container">
		<section>
			<%= render 'layouts/header' %>
			<%= yield :user_navigation %>
			
			<% flash.each do |key, value| %>
			     <div class="flash <%= key %>"><%= value %></div>
			<% end %>
			
			<%= yield %>
		</section>
		<%= debug(params) if Rails.env.development? %>
	</div>
  </body>
</html>