<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <%= render 'layouts/stylesheets' %>

  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>

  <%= yield :head %>
</head>
<body>
	<div class="container">
		<section>
			<%= render 'layouts/header' %>
			
			<% flash.each do |key, value| %>
			     <div class="flash <%= key %>"><%= value %></div>
			<% end %>
			
			<%= yield %>
		</section>
		<%= debug(params) if Rails.env.development? %>
	</div>
  </body>
</html>